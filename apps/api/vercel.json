{
  "buildCommand": "cd ../.. && pnpm --filter @ballast/shared db:generate && pnpm --filter @ballast/shared db:deploy && pnpm --filter @ballast/api build",
  "installCommand": "cd ../.. && pnpm install",
  "functions": {
    "api/index.js": {
      "includeFiles": ["../src/**", "../../packages/shared/**"]
    }
  },
  "env": {
    "NODE_OPTIONS": "--experimental-loader ./apps/api/src/loader.mjs"
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index.js"
    }
  ]
}
